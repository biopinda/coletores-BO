mongodb:
  uri: "mongodb://username:password@localhost:27017/?authSource=admin"
  database: "your_database"
  collection: "your_collection"
  filter: { kingdom: "Plantae" }

local_db:
  type: "duckdb"
  path: "./data/canonicalEntities.db"

processing:
  batch_size: 10000
  workers: 8
  confidence_threshold: 0.70

algorithms:
  similarity_weights:
    levenshtein: 0.4
    jaro_winkler: 0.4
    phonetic: 0.2

output:
  csv_path: "./output/canonical_report.csv"
  rules_doc: "./docs/rules.md"
